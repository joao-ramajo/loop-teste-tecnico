{
    "name": "noweb/base",
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/",
            "Infra\\": "src/Infra/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "joao-ramajo",
            "email": "joaoramajo744@gmail.com"
        }
    ],
    "scripts": {
        "stan": "docker exec -it api vendor/bin/phpstan analyse -l 5 src",
        "test": "docker exec -it api vendor/bin/pest",
        "migrate": [
            "docker exec -it api php database/migrate.php",
            "docker exec -it api php database/seed.php",
            "docker exec -it api php database/seed_slots.php"
        ]
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "monolog/monolog": "^3.9",
        "php-di/php-di": "^7.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "phpstan/phpstan": "^2.1",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
